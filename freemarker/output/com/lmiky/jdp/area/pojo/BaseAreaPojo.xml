<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lmiky.jdp.area.pojo.BaseAreaPojo">
	<resultMap type="BaseAreaPojo" id="baseAreaPojo" extends="com.lmiky.jdp.database.pojo.BasePojo.basePojo">
		<result column="name" property="name"/>
		<result column="phoneticAlphabet" property="phoneticAlphabet"/>
	</resultMap>

	<sql id="tableName">
		t_base_area_pojo
	</sql>
	<sql id="tableAlias">
		BaseAreaPojo
	</sql>

	<select id="find" resultMap="baseAreaPojo">
		select * from 
		<include refid="tableName"/> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition"/>
		</trim>
	</select>
	
	<select id="list" resultMap="baseAreaPojo">
		select * from
		<include refid="tableName" /> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition" />
		</trim>
		<include refid="common.sortCondition" />
		<include refid="common.pageCondition" />
	</select>

	<insert id="add" parameterType="BaseAreaPojo" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into
		<include refid="tableName" />
		(
			 id
			,name
			,phoneticAlphabet
		)
		values
		(
			 #{id}
			,#{name}
			,#{phoneticAlphabet}
		)
	</insert>
	
	<update id="update" parameterType="BaseAreaPojo">
		update <include refid="tableName" /> 
		<trim prefix="set" suffixOverrides=",">
			<if test="name != null">name=#{name},</if>
			<if test="phoneticAlphabet != null">phoneticAlphabet=#{phoneticAlphabet},</if>
		</trim>
		where id=#{id}
	</update>
</mapper>