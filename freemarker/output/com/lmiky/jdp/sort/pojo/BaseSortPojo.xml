<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lmiky.jdp.sort.pojo.BaseSortPojo">
	<resultMap type="BaseSortPojo" id="baseSortPojo" extends="com.lmiky.jdp.database.pojo.BasePojo.basePojo">
		<result column="sort" property="sort"/>
	</resultMap>

	<sql id="tableName">
		t_base_sort_pojo
	</sql>
	<sql id="tableAlias">
		BaseSortPojo
	</sql>

	<select id="find" resultMap="baseSortPojo">
		select * from 
		<include refid="tableName"/> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition"/>
		</trim>
	</select>
	
	<select id="list" resultMap="baseSortPojo">
		select * from
		<include refid="tableName" /> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition" />
		</trim>
		<include refid="common.sortCondition" />
		<include refid="common.pageCondition" />
	</select>

	<insert id="add" parameterType="BaseSortPojo" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into
		<include refid="tableName" />
		(
			 id
			,sort
		)
		values
		(
			 #{id}
			,#{sort}
		)
	</insert>
	
	<update id="update" parameterType="BaseSortPojo">
		update <include refid="tableName" /> 
		<trim prefix="set" suffixOverrides=",">
			<if test="sort != null">sort=#{sort},</if>
		</trim>
		where id=#{id}
	</update>
</mapper>