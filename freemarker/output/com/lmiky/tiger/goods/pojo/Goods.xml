<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lmiky.tiger.goods.pojo.Goods">
	<resultMap type="Goods" id="goods" extends="com.lmiky.jdp.database.pojo.BasePojo.basePojo">
		<result column="couponDiscount" property="couponDiscount"/>
		<result column="images" property="images"/>
		<result column="marketPrice" property="marketPrice"/>
		<result column="createTime" property="createTime"/>
		<result column="salePrice" property="salePrice"/>
		<result column="audit" property="audit"/>
		<result column="logo" property="logo"/>
		<result column="updateTime" property="updateTime"/>
		<result column="title" property="title"/>
		<result column="class" property="class"/>
		<result column="content" property="content"/>
	</resultMap>

	<sql id="tableName">
		t_goods
	</sql>
	<sql id="tableAlias">
		Goods
	</sql>

	<insert id="add" parameterType="Goods" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into
		<include refid="tableName" />
		(
			 id
			,couponDiscount
			,images
			,marketPrice
			,createTime
			,salePrice
			,audit
			,logo
			,updateTime
			,title
			,class
			,content
		)
		values
		(
			 #{id}
			,#{couponDiscount}
			,#{images}
			,#{marketPrice}
			,#{createTime}
			,#{salePrice}
			,#{audit}
			,#{logo}
			,#{updateTime}
			,#{title}
			,#{class}
			,#{content}
		)
	</insert>

	<select id="list" resultMap="goods">
		select * from
		<include refid="tableName" /> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition" />
		</trim>
		<include refid="common.sortCondition" />
		<include refid="common.pageCondition" />
	</select>
</mapper>